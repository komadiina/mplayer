<Window x:Class="mplayer.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:mplayer"
		mc:Ignorable="d"
		Title="mPlayer"
		Height="450"
		Width="800"
		xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
		xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
		AllowsTransparency="True"
		WindowStyle="None"
		xmlns:vm="clr-namespace:mplayer.src.vm;assembly=">
	<Window.Style>
		<Style TargetType="Window"
			   BasedOn="{StaticResource {x:Type Window}}" />
	</Window.Style>

	<Window.DataContext>
		<vm:ContextBarViewModel />
	</Window.DataContext>

	<Window.InputBindings>
		<KeyBinding Command="{Binding Path=OpenFileCommand}"
					Key="O"
					Modifiers="Ctrl" />
		<KeyBinding Command="{Binding Path=OpenFolderCommand}"
					Key="K"
					Modifiers="Ctrl" />
	</Window.InputBindings>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="35" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<Border CornerRadius="5"
				Background="#2f2f2f">
			<DockPanel Grid.Row="0"
					   Margin="5,5"
					   x:Name="TitleBar"
					   MouseDown="TitleBar_MouseDown"
					   Background="Transparent">
				<Label Content="mPlayer"
					   HorizontalAlignment="Left"
					   VerticalAlignment="Center"
					   DockPanel.Dock="Left"
					   Margin="5,0"
					   Padding="0 2"
					   FontWeight="SemiBold" />

				<StackPanel HorizontalAlignment="Right"
							DockPanel.Dock="Right"
							Orientation="Horizontal">
					<ui:Button x:Name="btbtnMinimizenClose"
							   Click="btnMinimize_Click"
							   HorizontalAlignment="Right"
							   Margin="4,0">
						<Button.Content>
							<fa:FontAwesome Icon="WindowMinimize"
											FontSize="10" />
						</Button.Content>
					</ui:Button>

					<ui:Button x:Name="btnClose"
							   Click="btnClose_Click"
							   HorizontalAlignment="Right"
							   Margin="0,0,4,0">
						<Button.Content>
							<fa:FontAwesome Icon="Close"
											FontSize="10" />
						</Button.Content>
					</ui:Button>
				</StackPanel>
			</DockPanel>
		</Border>

		<Frame Source="/src/navigation/pages/MainPage.xaml"
			   Grid.Row="1" />
	</Grid>
</Window>
